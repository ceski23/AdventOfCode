{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "name": "Run file",
      "request": "launch",
      "program": "${file}",
      "runtimeArgs": ["--loader", "tsx", "--no-warnings"],
      "skipFiles": ["<node_internals>/**"],
      "outFiles": ["${workspaceFolder}/**/*.js"],
      "internalConsoleOptions": "openOnSessionStart"
    }
  ]
}
